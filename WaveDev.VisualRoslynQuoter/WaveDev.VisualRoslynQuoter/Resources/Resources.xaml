<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ap="clr-namespace:WaveDev.VisualRoslynQuoter.Resources">
    
    <Style x:Key="CopyButton" TargetType="Button">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Image Source="pack://application:,,,/Resources/CopyToClipboard.png" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>Transparent</Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>Transparent</Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="PasteButton" TargetType="Button">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Image Source="pack://application:,,,/Resources/Paste.png"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background">
            <Setter.Value>Transparent</Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>Transparent</Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>